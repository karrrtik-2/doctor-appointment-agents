# ============================================================
# Doctor Appointment Platform — Environment Configuration
# ============================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.
# ============================================================

# ── Environment ──────────────────────────────────────────────
# Options: development, staging, production, testing
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ── OpenAI ───────────────────────────────────────────────────
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o

# ── LangSmith Observability ─────────────────────────────────
# Get your API key from https://smith.langchain.com/
LANGCHAIN_API_KEY=ls-your-langsmith-api-key
LANGCHAIN_PROJECT=doctor-appointment-platform
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_TRACING_V2=true

# ── API Server ───────────────────────────────────────────────
API_HOST=127.0.0.1
API_PORT=8003

# ── Agent Configuration ─────────────────────────────────────
RECURSION_LIMIT=20

# ── Secrets Backend ──────────────────────────────────────────
# Options: env, aws_ssm, azure_keyvault, vault
SECRETS_BACKEND=env
SECRETS_PREFIX=/doctor-appointment/

# ── Cost Analytics ───────────────────────────────────────────
COST_TRACKING_ENABLED=true
COST_STORAGE_BACKEND=sqlite
COST_DB_PATH=data/cost_analytics.db

# ── AWS (only if using aws_ssm secrets backend) ─────────────
# AWS_DEFAULT_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
